<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/newsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        >


        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/articleHeaderImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_image_black_24dp"
                android:layout_margin="8dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/articleHeaderImage"
                android:layout_alignParentEnd="true"
                android:id="@+id/articleTitleLayout"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/articleTitleTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Article Title"
                    android:layout_weight="80"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium" />


                <ImageButton
                    android:id="@+id/downloadButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_file_download_black_24dp"
                    android:layout_weight="20"
                    android:background="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"

                    />


            </LinearLayout>



            <LinearLayout
                android:layout_below="@+id/articleTitleLayout"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignStart="@+id/articleTitleLayout"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:id="@+id/articleInfoLayout"
                >

                <TextView
                    android:id="@+id/articleSiteName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="News Site"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/articleDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Yesterday"
                    android:gravity="end"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/articleDescText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/articleTitleLayout"
                android:layout_alignStart="@+id/articleInfoLayout"
                android:layout_below="@+id/articleInfoLayout"
                android:maxLines="2"
                android:ellipsize="end"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>